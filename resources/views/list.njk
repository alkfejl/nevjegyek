{% extends 'parent' %}

{% block tartalom %}
  {% if currentUser.username %}
    {% for nevjegy in nevjegyek %}
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">{{ nevjegy.name }}</h2>
            </div>
            <div class="panel-body">
                <h6>Cím: {{ nevjegy.address }}</h6>
                <h6>Telefonszám: {{ nevjegy.phone }}</h6>
                <h6>Email: {{ nevjegy.email }}</h6>
            </div>
            </div>
        </div>
    {% endfor %}
  {% else %}
    <div class="alert alert-warning">
        <h4>Hoppá!</h4>
        <p>Az oldal használatához be kell jelentkezni. Ha még nem vagy felhazsnáló, regisztrálj most!</p>
</div>
  {% endif %}
{% endblock %}